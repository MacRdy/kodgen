{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"removeComments": true,
		"declaration": true,
		"outDir": "./out",
		"baseUrl": "./",
		"sourceMap": true,
		"sourceRoot": "/",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
